mixin input(label, name)
	.form-group
		label=label
		input.form-control(name=name value=val(name))

mixin genders()
	.control
		label(class="radio")
			input(type="radio", name="gender", value="male")
			i.fa.fa-mars.ml-2.mr-4
		label(class="radio")
			input(type="radio", name="gender", value="female")
			i.fa.fa-venus.ml-2.mr-4
		label(class="radio")
			input(type="radio", name="gender", value="other")
			i.fa.fa-transgender-alt.ml-2.mr-4s

mixin authenticationChoices()
	.columns
		each authenticator in authenticators
			if authenticator.isActivated
				.column
					label.form-switch
						input(type='checkbox' name=authenticator.slug checked)
						i
						=authenticator.description
			else
				.column
					label.form-switch
						input(type='checkbox' name=authenticator.slug)
						i
						=authenticator.description


mixin usernamePasswordRow()
	.columns.is-vcentered
		.column
			.form-group
				.field
					label.label Username
					.control
						input.input(name="username" type='text')
		.column
			.form-group
				.field
					label.label Password
					.control
						input.input(name="password" type='password')

