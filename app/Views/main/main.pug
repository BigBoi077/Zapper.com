extends ../layout

block logout
  +logoutButton("/Connexion/Logout")

block content
  +title("Hi there " + user.firstname + " welcome back!")
  +title("Here you can manage you own personal passwords for different services.")
  .box.mt-4
    form(action="" method="post")
      .columns.is-vcentered
        .column.is-2
          img.service-icon(src="/assets/images/service/netflix.png")
        .column.is-10
          .columns.is-vcentered
            .column.is-5
              .form-group
                .field
                  .fas.fa-user-alt
                  .control
                    input.input(name="username" type='text' value="josh")
            .column.is-5
              .form-group
                form-group
                  .field
                    .fas.fa-fingerprint
                    .control
                      input.input(data-password-box="netflix" name="password" type='password' value="piss")
            .column.is-2
              .columns.mt-4
                .column
                  a
                    .fas.fa-eye(data-password-reveal="netflix")
                .column
                  a
                    .fas.fa-pen-fancy.no-style
                .column
                  a
                    .fas.fa-trash.error-red
  +changeModal("netflix")
  .columns.mb-1
    .column.flex
      h1.subtitle Add service
  .columns
    .column.flex.size-medium
      .fas.fa-plus-circle.fa-lg.success-green

block scripts
  include ../components/scripts