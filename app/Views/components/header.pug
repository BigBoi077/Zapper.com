.columns.is-vcentered
	.column.header-title
		h1 Zapper
	.column.flex-end.mt-5
		nav.navbar
			.navbar-brand
				nav.navbar(role='navigation' aria-label='main navigation')
					.navbar-brand
						span.navbar-burger.burger(data-targer="items")
							span(aria-hidden='true')
							span(aria-hidden='true')
							span(aria-hidden='true')
					#items.navbar-menu.is-hidden-desktop
						.navbar-end
							each item in menuItems
								a.navbar-item(href=item.href)=item.name

		nav.breadcrumb.has-bullet-separator.is-hidden-touch(aria-label="breadcrumbs")
			ul
				each item in menuItems
					li
						a.no-style.breadcrumb-elem(href=item.href)=item.name
				li
					block logout

